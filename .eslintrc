{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "camelcase": [2, {"properties": "never"}],
    "comma-dangle": ["error", "never"],
    "no-return-await": ["error"],
    "keyword-spacing": ["error", { "overrides": {
      "if": { "after": true },
      "for": { "after": true },
      "while": { "after": true },
      "catch": { "after": true }
    } }]
  }
}
